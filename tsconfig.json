{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "allowJs": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/services/*": ["services/*"],
      "@/db/*": ["db/*"],
      "@/stores/*": ["src/stores/*"],
      "@/utils/*": ["src/utils/*"],
      "@/theme/*": ["src/theme/*"]
    }
  },
  "include": ["app", "src", "db", "services", "expo-env.d.ts", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
